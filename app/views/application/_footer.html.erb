<footer>
	<div class="row">
		<div class="small-2 columns">
			<%= link_to(image_tag("logos/FB-f-Logo__blue_100x100.png", alt: t("views.application._footer.image_tags.facebook"), title: t("views.application._footer.image_tags.facebook")), t("application.client.facebook_url")) %>
		</div><!-- /.medium-# columns -->
		<div class="small-2 columns">
			<%= link_to(image_tag("logos/Twitter_logo_blue-100x81.png", alt: t("views.application._footer.image_tags.twitter"), title: t("views.application._footer.image_tags.twitter")), t("application.client.twitter_url")) %>
		</div><!-- /.medium-# columns -->
		<div class="small-8 columns">
			<p>
				<%= t("views.application._footer.copy.website_by") %>
				<%= link_to t("application.developer.name"), t("application.developer.url") %><br />

				&copy;
				<%= Time.now.year %>
				<%= link_to t("application.client.name"), root_path %><br />
			</p>
		</div><!-- /.medium-# columns -->
	</div><!-- /.row -->
</footer>
