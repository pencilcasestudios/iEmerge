@import "common";

section {
	padding-top: 2em;
	padding-bottom: 2em;
	margin-bottom: 0.5em;
}









#welcome {
	#hero {
		background-color: $black;

		h1 {
			margin-top: 2em;
			color: darken($orange, 0%);
		}

		h2 {
			color: lighten($red, 10%);
		}
	}

	#about {
		background: url(<%= image_url("backgrounds/background1-1024x680.jpg") %>);
		background-size: cover;
		background-position: right top;

		h2 {
			color: darken($orange, 0%);
			text-shadow: 2px 2px 2px $shadow_black;
		}

		p {
			color: darken($white, 10%);
			text-shadow: 2px 2px 2px $shadow_black;
		}

		ul {
			color: darken($white, 10%);
			text-shadow: 2px 2px 2px $shadow_black;
		}
	}

	#talent {
		background-color: darken($grey, 50%);
		padding-left: 2%;
		padding-right: 2%;
		text-align: center;

		h2 {
			color: darken($orange, 0%);
			text-shadow: 2px 2px 2px $shadow_black;
		}

		p {
			color: darken($black, 0%);
			text-shadow: 1px 1px 1px $shadow_black;

			strong {
				color: darken($white, 0%);
				padding: 0.15em 0.25em 0.15em 0.25em;
				background: rgba(0,0,0,0.2);
			}

			ul li img.photo {
				border: 2px solid $black;
			}
		}
	}

	#team {
		background: url(<%= image_url("backgrounds/background2-1024x680.jpg") %>);
		background-size: cover;
		background-position: right top;

		h2 {
			color: darken($orange, 0%);
			text-shadow: 2px 2px 2px $shadow_black;
		}

		p {
			color: lighten($white, 10%);
			text-shadow: 1px 1px 1px $shadow_black;

			strong {
				color: darken($white, 0%);
				padding: 0.15em 0.25em 0.15em 0.25em;
				background: rgba(0,0,0,0.2);
			}
		}
	}

	#work {
		background-color: lighten($white, 0%);

		h2 {
			text-align: center;
			color: darken($orange, 0%);
			text-shadow: 2px 2px 2px $shadow_black;
		}

		ul {

			li {
				.caption {
					padding-left: 1%;
					padding-right: 1%;
				}

				img {
					border: 2px solid $black;
				}
			}
		}
	}

	#contact {
		background: url(<%= image_url("backgrounds/background3-1024x680.jpg") %>);
		background-size: cover;
		background-position: right top;

		a {
			background: rgba(0,200,255,0.3);
			color: darken($white, 5%);
			padding: 0.15em 0.25em 0.15em 0.25em;
			font-size: 1.2em;
			line-height: 1.5em;

			&:hover {
				color: darken($white, 0%);
				text-decoration: underline;
			}
		}

		h2 {
			color: darken($orange, 0%);
			text-shadow: 2px 2px 2px $shadow_black;
		}

		p {
			color: darken($black, 0%);
			text-shadow: 1px 1px 1px $shadow_black;

			strong {
				color: darken($white, 0%);
				padding: 0.15em 0.25em 0.15em 0.25em;
				background: rgba(0,0,0,0.2);
			}
		}
	}
}









/*
	Ref: http://foundation.zurb.com/docs/media-queries.html
	max-width 640px, mobile-only styles, use when QAing mobile issues
*/
@media only screen and (max-width: 40em) {
	#welcome #hero h1,
	#welcome #hero h2 {
		text-align: center;
	}

	#welcome #about h2 {
	}

	#welcome #about p {
		font-size: 1em;
	}

	#welcome #team {
		background: url(<%= image_url("backgrounds/background2-1024x680.jpg") %>);
		background-size: cover;
		background-position: 80% 0%;
	}

	#welcome #team h2 {
		text-align: right;
	}

	#welcome #team p {

		text-align: right;
	}

	#welcome #contact h2 {
		text-align: right;
	}

	#welcome #contact p {
		text-align: right;
	}
}









/* min-width 641px and max-width 1024px, use when QAing tablet-only issues */
@media only screen and (min-width: 40.063em) and (max-width: 64em) {
	#welcome #work {
		padding-left: 1%;
		padding-right: 1%;
	}
}









/*
	Ref: http://foundation.zurb.com/docs/media-queries.html
	min-width 1025px, large screens
*/
@media only screen and (min-width: 64.063em) {
	#welcome #hero .title {
		text-align: right;
	}

	#welcome #hero h1 {
		margin-top: 4.8em;
	}

	#welcome #hero h2 {
		font-size: 1.4em;
	}

	#welcome #about h2 {
		color: darken($orange, 0%);
		font-size: 3em;
	}

	#welcome #about p {
		color: darken($white, 10%);
		font-size: 1em;
	}
}
