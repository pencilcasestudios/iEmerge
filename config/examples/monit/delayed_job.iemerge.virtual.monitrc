# Ref: https://github.com/collectiveidea/delayed_job/blob/master/contrib/delayed_job_rails_4_multiple.monitrc
# Ref: https://gist.github.com/denmarkin/866427#file-delayed_job-monitrc

check process delayed_job_iemerge_virtual with pidfile /var/Apps/iEmerge/virtual/shared/pids/delayed_job.pid
	start program = "/bin/su - deploy -c 'cd /var/Apps/iEmerge/virtual/current; RAILS_ENV=production script/delayed_job start'"
	stop program = "/bin/su - deploy -c 'cd /var/Apps/iEmerge/virtual/current; RAILS_ENV=production script/delayed_job stop'"
